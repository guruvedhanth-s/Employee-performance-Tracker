# Environment Configuration Template
# 
# Copy this file to create .env and update values for your environment
# DO NOT commit the actual .env file to version control

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================
APP_NAME=ODS
APP_VERSION=1.0.0

# Set to False in production
DEBUG=True

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
# Format: postgresql://username:password@host:port/database
DATABASE_URL=postgresql://ods_user:ods_password@localhost:5432/ods_db

# Connection pool settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=False  # Log all SQL queries (set to True for debugging)

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
# Used for caching and session management
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_EXPIRATION=3600  # seconds
REDIS_POOL_SIZE=10

# ==============================================================================
# JWT & AUTHENTICATION SETTINGS
# ==============================================================================
# CRITICAL: Change this in production! Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-change-in-production

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# Password requirements
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_DIGITS=True
PASSWORD_REQUIRE_SPECIAL_CHARS=True

# ==============================================================================
# SESSION MANAGEMENT
# ==============================================================================
MAX_LOGIN_ATTEMPTS=5
LOGIN_BLOCK_DURATION_MINUTES=15
MAX_REQUESTS_PER_MINUTE=60
SESSION_CLEANUP_ENABLED=True
AUTO_REFRESH_BEFORE_EXPIRY_MINUTES=5

# ==============================================================================
# CORS & SECURITY SETTINGS
# ==============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:5173

# Allowed hostnames
ALLOWED_HOSTS=localhost,127.0.0.1

# HTTPS enforcement (set to True in production with HTTPS)
FORCE_HTTPS=False

# ==============================================================================
# FILE UPLOAD SETTINGS
# ==============================================================================
MAX_UPLOAD_SIZE_MB=50
UPLOAD_DIR=./uploads
ALLOWED_EXTENSIONS=.xlsx,.xls
ENABLE_FILE_UPLOAD=True

# ==============================================================================
# EMAIL CONFIGURATION (if applicable)
# ==============================================================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SENDER_EMAIL=your-email@gmail.com
SENDER_NAME="ODS System"

# ==============================================================================
# LOGGING CONFIGURATION
# ==============================================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log
LOG_FORMAT=json  # or "default"

# ==============================================================================
# EXTERNAL SERVICES (if applicable)
# ==============================================================================
# Cloud storage, 3rd party APIs, etc.
API_KEY_EXAMPLE=sk_xxxxxxxxxxxx
EXTERNAL_SERVICE_URL=https://api.example.com

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
ENABLE_AUDIT_LOGGING=True
ENABLE_METRICS_COLLECTION=True
ENABLE_CACHING=True
ENABLE_RATE_LIMITING=True

# ==============================================================================
# DEVELOPMENT SETTINGS (only for dev, never in production)
# ==============================================================================
# Allow direct API access without frontend
ALLOW_DIRECT_API_ACCESS=True

# Seed database with sample data
SEED_DATABASE=False

# Enable verbose error messages
VERBOSE_ERRORS=False
